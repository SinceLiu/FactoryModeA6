<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/info_layout"
    android:background="@drawable/psensor_background">
    <TextView
        android:id="@+id/proximity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/psensor_text_size_1"
        android:layout_marginTop="@dimen/psensor_proximity_margin_top"
        android:layout_marginLeft="@dimen/psensor_proximity_margin_horizontal"
        android:layout_marginRight="@dimen/psensor_proximity_margin_horizontal"
        android:text="@string/proximity"
        android:textColor="#000000" />
    <TextView
        android:id="@+id/tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tips"
        android:textColor="@color/Blue"
        android:layout_marginTop="@dimen/psensor_tips_margin_top"
        android:layout_marginLeft="@dimen/psensor_proximity_margin_horizontal"
        android:layout_marginRight="@dimen/psensor_proximity_margin_horizontal"
        android:textSize="@dimen/psensor_text_size_2" />
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
    <Button
        android:id="@+id/psensor_bt_ok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:textSize="@dimen/psensor_text_size_3"
        android:textColor="#000000"
        android:text="@string/Success" />
    <Button
        android:id="@+id/psensor_bt_failed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:textSize="@dimen/psensor_text_size_3"
        android:textColor="#000000"
        android:text="@string/Failed" />
</LinearLayout>
</LinearLayout>
