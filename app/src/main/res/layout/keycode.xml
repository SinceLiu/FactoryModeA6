<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/info_layout">
    <TextView
        android:id="@+id/keycode_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/KeyCode_info"
        android:textColor="@color/Green"
        android:layout_gravity="center_horizontal"
        android:textSize="@dimen/keycode_text_size_1" />

    <GridView
        android:id="@+id/keycode_grid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/keycode_padding"
        android:verticalSpacing="@dimen/keycode_padding"
        android:horizontalSpacing="@dimen/keycode_padding"
        android:numColumns="auto_fit"
        android:columnWidth="@dimen/keycode_column_width"
        android:stretchMode="columnWidth"
        android:gravity="center" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <Button
            android:id="@+id/keycode_bt_ok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:textSize="@dimen/keycode_text_size_2"
            android:text="@string/Success" />
        <Button
            android:id="@+id/keycode_bt_failed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:textSize="@dimen/keycode_text_size_2"
            android:text="@string/Failed" />
    </LinearLayout>
</LinearLayout>